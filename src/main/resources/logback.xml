<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ee.ut.physics.digi.tbd" level="INFO" />
    <logger name="ee.ut.physics.digi.tbd.robot.mainboard" level="TRACE" />
    <logger name="ee.ut.physics.digi.tbd.robot.mainboard" level="OFF" />
    <logger name="ee.ut.physics.digi.tbd.robot.logic" level="OFF" />

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>